{
  "name": "trademaster-pro",
  "version": "1.0.0",
  "description": "TradeMaster Pro - AI-powered stock trading platform",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
