# ==============================================
# TradeMaster Pro - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trademaster
POSTGRES_USER=trademaster
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Full database URL (auto-generated in docker-compose)
DATABASE_URL=postgresql://trademaster:your_secure_postgres_password_here@postgres:5432/trademaster

# ----------------------------------------------
# Redis Configuration
# ----------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# ----------------------------------------------
# API Keys
# ----------------------------------------------
# Federal Reserve Economic Data API
# Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# Alpha Vantage API (for stock data)
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Reddit API (for social sentiment)
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=TradeMasterPro/1.0

# Twitter API (optional)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Binance API (for crypto data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# CoinGecko API (optional - has free tier)
COINGECKO_API_KEY=your_coingecko_api_key_here

# ----------------------------------------------
# Application Configuration
# ----------------------------------------------
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# ----------------------------------------------
# Backend Configuration
# ----------------------------------------------
BACKEND_PORT=8000
YFINANCE_AUTO_UPDATE=true
UNIVERSE_TICKER_LIMIT=4000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://frontend:3000,https://yourdomain.com

# Socket.io CORS origins
SOCKETIO_CORS_ORIGINS=*

# ----------------------------------------------
# Frontend Configuration
# ----------------------------------------------
FRONTEND_PORT=3000

# API URLs (adjust for production)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=http://localhost:8000

# ----------------------------------------------
# Security (Optional)
# ----------------------------------------------
# JWT secret for authentication (if implementing auth)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# Admin key for force_refresh endpoints
ADMIN_API_KEY=your_admin_api_key_here

# ----------------------------------------------
# Email Configuration (Optional)
# ----------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password

# ----------------------------------------------
# Monitoring & Analytics (Optional)
# ----------------------------------------------
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ----------------------------------------------
# Rate Limiting
# ----------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ----------------------------------------------
# Cache Configuration
# ----------------------------------------------
CACHE_TTL_PRICES=60
CACHE_TTL_PREDICTIONS=3600
CACHE_TTL_SOCIAL=300
CACHE_TTL_NEWS=600

# ----------------------------------------------
# Docker Development Mode
# ----------------------------------------------
# Set to 'true' for hot-reloading in development
HOT_RELOAD=false
