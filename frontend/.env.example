# ============================================================================
# TradeMaster Pro Frontend - Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# .env.local is automatically ignored by git

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL
# Development: http://localhost:8000
# Production: https://api.your-domain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL (if different from API_URL)
# Development: http://localhost:8000
# Production: wss://api.your-domain.com
NEXT_PUBLIC_WS_URL=http://localhost:8000

# ============================================================================
# Application Settings
# ============================================================================

# App Environment (development, staging, production)
NEXT_PUBLIC_ENV=production

# App Name
NEXT_PUBLIC_APP_NAME=TradeMaster Pro

# App Version
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_CRYPTO=true
NEXT_PUBLIC_ENABLE_SOCIAL=true
NEXT_PUBLIC_ENABLE_PORTFOLIO=true
NEXT_PUBLIC_ENABLE_ALERTS=true

# ============================================================================
# Analytics & Monitoring (Optional)
# ============================================================================

# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ============================================================================
# External Services (Optional)
# ============================================================================

# TradingView Widget
NEXT_PUBLIC_TRADINGVIEW_ENABLED=true

# ============================================================================
# Build Configuration
# ============================================================================

# For production builds
# NODE_ENV=production

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1
