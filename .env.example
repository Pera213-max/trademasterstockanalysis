# TradeMaster Pro - Environment Variables Template
# ================================================
# Copy this file to backend/.env and fill in your API keys
# NEVER commit the actual .env file to Git!

# ============================================================================
# STOCK DATA APIS
# ============================================================================

# Finnhub - Real-time stock quotes, analyst ratings, price targets
# Sign up: https://finnhub.io/dashboard
# Free tier: 60 API calls/minute
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage - Additional stock data (optional)
# Sign up: https://www.alphavantage.co/support/#api-key
# Free tier: 5 calls/min, 500 calls/day
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here


# ============================================================================
# SOCIAL MEDIA APIS
# ============================================================================

# Reddit API (PRAW) - Social sentiment analysis
# Setup: https://www.reddit.com/prefs/apps
# 1. Create "script" app
# 2. Name: TradeMaster Pro
# 3. Copy client_id and secret
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Twitter API v2 (optional)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here


# ============================================================================
# NEWS APIS
# ============================================================================

# NewsAPI - Market news
# Sign up: https://newsapi.org/register
# Free tier: 100 requests/day
NEWS_API_KEY=your_newsapi_key_here


# ============================================================================
# ECONOMIC DATA APIS
# ============================================================================

# FRED - Federal Reserve Economic Data
# Sign up: https://fred.stlouisfed.org/docs/api/api_key.html
# Free tier: Unlimited
FRED_API_KEY=your_fred_api_key_here


# ============================================================================
# DATABASE & CACHING
# ============================================================================

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379


# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
LOG_LEVEL=INFO

# Cache behavior (production defaults)
FI_CACHE_ONLY=true
FI_NEWS_ON_DEMAND=false
US_CACHE_ONLY=true
YFINANCE_CACHE_ONLY=true
US_ANALYSIS_PREFETCH_ENABLED=true
US_ANALYSIS_PREFETCH_ON_STARTUP=true
US_ANALYSIS_PREFETCH_LIMIT=250

# Cache TTL (seconds)
CACHE_TTL_PREDICTIONS=3600
CACHE_TTL_PRICES=60
CACHE_TTL_SOCIAL=300
CACHE_TTL_NEWS=600
CACHE_TTL_MACRO=3600

# ============================================================================
# FINLAND (NASDAQ HELSINKI) EVENT SOURCES
# ============================================================================

# FIN-FSA short positions data table
FI_FIVA_SHORTS_URL=https://www.finanssivalvonta.fi/api/shortselling/datatable/current

# Nasdaq Nordic company news (CNS) base URL
FI_NASDAQ_CNS_BASE_URL=https://api.news.eu.nasdaq.com/news/

# Per-issuer company news fetch size
FI_NASDAQ_COMPANY_NEWS_LIMIT=5

# Enable RSS fallback ingestion (disabled by default)
FI_NASDAQ_RSS_ENABLED=false
