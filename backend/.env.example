# ============================================================================
# TradeMaster Pro - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=TradeMaster Pro
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/trademaster

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# CORS Configuration
# ============================================================================
# Add your production frontend URLs here, comma-separated
# Example: CORS_ORIGINS=https://trademaster.pro,https://www.trademaster.pro
CORS_ORIGINS=http://localhost:3000

# ============================================================================
# Market Data APIs (REQUIRED FOR CORE FUNCTIONALITY)
# ============================================================================

# Finnhub API (Required for market data, news, earnings calendar)
# Get your free API key at: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# News API (Required for financial news)
# Get your free API key at: https://newsapi.org/register
NEWS_API_KEY=your_newsapi_key_here

# Alpha Vantage (Optional - additional market data)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io (Optional - real-time stock data)
# Get your API key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_key_here

# FRED API (Optional - economic data)
# Get your API key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_key_here

# ============================================================================
# Social Media APIs (REQUIRED FOR SOCIAL SENTIMENT)
# ============================================================================

# Reddit API (Required for social sentiment analysis)
# Create an app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=TradeMaster Pro 1.0

# Twitter/X API (Optional - currently not used)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ============================================================================
# Crypto Exchange APIs (Optional)
# ============================================================================
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# ============================================================================
# Nordic Market APIs (Optional - for Nordic markets)
# ============================================================================
YLE_API_APP_ID=your_yle_app_id
YLE_API_APP_KEY=your_yle_app_key

# ============================================================================
# Cache TTL Settings (in seconds)
# ============================================================================
CACHE_TTL_PRICES=60          # Real-time prices (1 minute)
CACHE_TTL_PREDICTIONS=1800   # AI predictions (30 minutes)
CACHE_TTL_SOCIAL=300         # Social sentiment (5 minutes)
CACHE_TTL_NEWS=600           # News articles (10 minutes)
CACHE_TTL_MACRO=300          # Macro indicators (5 minutes)

# ============================================================================
# Security Settings (Production)
# ============================================================================
# Uncomment and set these for production deployments
# SECRET_KEY=generate-a-random-secret-key-here
# ACCESS_TOKEN_EXPIRE_MINUTES=43200
# PASSWORD_HASH_ITERATIONS=120000
# ADMIN_API_KEY=generate-a-random-admin-key-here

# ============================================================================
# Rate Limiting (Production)
# ============================================================================
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_BURST=10

# ============================================================================
# Monitoring & Logging (Production)
# ============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# LOG_FILE=/var/log/trademaster/api.log

# ============================================================================
# LLM APIs (OpenAI + Anthropic) - Finnish disclosure/news analysis
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# ============================================================================
# Finland disclosure sources (comma-separated)
# ============================================================================
# Nasdaq RSS feeds (Main + First North). Override with correct URLs if needed.
FI_NASDAQ_RSS_URLS=
# Finnish Financial Supervisory Authority (FIVA) short positions page
FI_FIVA_SHORTS_URL=
# Max number of new events to analyze per refresh
FI_NEWS_ANALYSIS_BATCH_LIMIT=5
# Max LLM insights per day (budget)
FI_LLM_DAILY_LIMIT=30
# Max fundamental insights created per scheduler run
FI_FUNDAMENTAL_INSIGHTS_PER_RUN=20
